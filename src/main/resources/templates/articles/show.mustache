{{>layouts/header}}
<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Content</th>
    </tr>
    </thead>
    <tbody>
    {{#article}} <!-- 모델 변수명과 같아야함 -->
    <tr>
        <th scope="row">{{id}}</th>
        <td colspan="2">{{title}}</td>
        <td>{{content}}</td>
    </tr>
    {{/article}}
    </tbody>

</table>
<a href="/articles/{{article.id}}/edit" class="btn btn-primary">Edit</a> <!-- articles 범위를 따로 지정하지 않았기에 article.id 로 표시 -->
<a href="/articles">Go to Artile List</a>
{{>layouts/footer}}